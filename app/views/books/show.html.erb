<% provide :title, t("all_books") %>
<h1><%= t "details_books" %></h1>

<div class="info-book">
  <div class="row">
    <div class="col-sm-3">
      <%= image_tag @book.book_img.url(:book_index) %>
    </div>
    <div class="col-md-6">
      <span class="tit"><%= @book.title %></span>
      <br/>
      <span class="author"><%= t "author" %><span class="na-aut">
        <%= @book.author %></span></span>
      <br/>
      <span class="price"><%= t "cover_price" %><span class="num-price">
        <%= display_total_price @book.unit_price %></span></span>
      <br/><br/>
      <%= t "number" %>
      <%= render "order_details/form", book: @book %>
    </div>
    <div class="col-md-3">
      <span class="average"><%= t "average_rating" %></span>
      <br/>
      <span class="average-review-rating" data-score=<%= @average_review%>></span>
      <br/><br/>
      <span><%= t "base_on" %><%= @book.reviews.size %><%= t "num_reviews" %></span>
    </div>
  </div>

  <div class="row">
    <div class="introduce">
      <h4><%= t "introduce_the_book" %></h4>
      <p><%= @book.description %></p>
    </div>
  </div>

  <div class="row">
    <div class="revie">
      <h4><%= t "reviews" %></h4>
      <div>
        <%= link_to t("post_your_comment"), new_book_review_path(@book),
          class:"post-comment" %>
      </div>
      <div>
        <div class="list-reviews">
          <ul>
            <%= render @reviews %>
          </ul>
        </div>

        <center><%= paginate @reviews, theme: "twitter-bootstrap-3" %></center>
      </div>
    </div>
  </div>

  <span class="baka"><%= link_to t("back"), books_path %></span>
</div>

<%= javascript_include_tag "reviews" %>
