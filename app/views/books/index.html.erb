
<div class="book-home">
  <div class="theme-header">
    <h1><%= t("theme_header") %></h1>
  </div>
</div>

<div class="row">
  <div class="col-sm-3">
    <% if can? :manage, :all %>
      <div class="st-add-cate">
        <%= link_to t("add_book"), new_admin_book_path, class: "add-cate" %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-9">
    <div class="search-form"><%= render "static_pages/form" %></div>
  </div>
</div>

<% provide :title, t("all_books") %>
<%= render "shared/flash" %>

<div class="list-books">
  <% if @books.blank? %>
    <center class="no-item"><%= t "no_book_currently" %></center>
  <% else %>
    <div class="book-home-list">
      <div class="row">
        <%= render @books %>
      </div>

      <center><%= paginate @books, theme: "twitter-bootstrap-3" %></center>
    </div>
  <% end %>
</div>

<%= javascript_include_tag "reviews" %>
